project_id = "your-gcp-project-id"
region     = "us-central1"
app_name   = "zstyle-services"

# Database configuration
database_tier = "db-f1-micro"  # Change to db-n1-standard-1 for production
database_name = "zstyle"
database_user = "zstyle_user"

# Cloud Run scaling
min_instances = 0
max_instances = 10
cpu           = 1
memory        = "512Mi"

# Telegram bot scaling
telegram_bot_min_instances = 0
telegram_bot_max_instances = 1

# Network configuration
use_private_ip = false  # Set to true for production

