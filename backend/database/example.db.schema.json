{
  "$jsonSchema": {
    "bsonType": "object",
    "required": [
      "email",
      "hashed_password",
      "phone_number",
      "username"
    ],
    "properties": {
      "email": {
        "bsonType": "string",
        "description": "user email to use for pre-authentication of user"
      },
      "hashed_password": {
        "bsonType": "string",
        "description": "hashed password for authorizing login checks"
      },
      "phone_number": {
        "bsonType": "string",
        "description": "Users phone number for call/text"
      },
      "username": {
        "bsonType": "string",
        "description": "The name of the user"
      }
    }
  }
}