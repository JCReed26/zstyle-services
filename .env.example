# Environment Configuration
# Copy this file to .env and fill in your values for local development

# Application Environment
ENVIRONMENT=development

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017/agent-connect-db

# Google Cloud Configuration (Optional for local development)
# Only needed if you want to use Google Cloud Logging locally
# GOOGLE_CLOUD_PROJECT=your-gcp-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# API Keys (if needed)
# GOOGLE_API_KEY=your-google-api-key
# GEMINI_API_KEY=your-gemini-api-key

# Server Configuration
PORT=8080
HOST=0.0.0.0

# Development Settings
DEBUG=true
LOG_LEVEL=INFO
